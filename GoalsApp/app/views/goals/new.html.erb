<%= render "layouts/errors" %>
<h1>New Goal</h1>

<form action="<%= goals_url %>" method="post">
  <%= auth_token %>
  <p>
  <label>Title
    <input type="text" name="goal[title]" value="">
  </label>
  </p>
  
  <p>
    <label>Body
      <textarea name="goal[body]"></textarea>
    </label>
  </p>
  
  <p>
    Permission<br>
    <label>Public
      <input type="radio" name="goal[permission]" value="Public">
    </label>
    <label>Private
      <input type="radio" name="goal[permission]" value="Private">
    </label>
  </p>
  
  <p><input type="submit" value="Create Goal"></p>
</form>